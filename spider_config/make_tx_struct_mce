# directly; instead, #include it in the right place in tx_struct.c (q.v).
#
################################# INSTRUCTIONS ###############################

use strict;

my $HEADER = "../spider_config/tes.h";

# get the number of fields from tes.h
my $n = do {
  local $/; # slurp
  open TES_H, "<$HEADER" or die "Can't open $HEADER: $!";
  $_ = <TES_H>;
  close TES_H;
  /NUM_MCE_FIELDS *([0-9]+)/;
  $1;
};

# n could be more than 255, but fix fset.h before allowing that.
die "Bad number of channels: $n" if ($n <= 1 or $n >= 255);

# print!
my ($loop, $chan) = (0, 0);
print "/* This file is automatically generated.  Changes made here will be ";
print "lost! */\n";
for (0 .. $n - 1) {
  printf "{\"mce%03i\",'r',LOOPMCE$loop,$chan,1024,0,'s',U_NONE},", $_;
  if (++$chan > 63) {
    $chan = 0;
    $loop++;
  }
}
