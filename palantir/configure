#!/bin/sh

echo ----------------------------------------------
echo "           Palantir configuration"
echo
echo -n "Executable destination [/usr/local/bin]: "
read EXEC_DEST

if [ -z "${EXEC_DIR}" ]
then
  EXEC_DIR=/usr/local/bin ;
fi

echo EXEC_DIR = ${EXEC_DIR} > Makefile.config

echo -n "Calibration files directory [/data/etc]: "
read ETC_DIR

if [ -z "${ETC_DIR}" ]
then
  ETC_DIR=/data/etc ;
fi

echo ETC_DIR = ${ETC_DIR} >> Makefile.config

echo -n "Data directory [/data/etc/palantir]: "
read DATA_DIR

if [ -z "${DATA_DIR}" ]
then
  DATA_DIR=/data/etc/palantir ;
fi

echo DATA_DIR = ${DATA_DIR} >> Makefile.config

echo -n "qt root directory [/usr/lib/qt3]: "
read QT_DIR

if [ -z "${QT_DIR}" ]
then
  QT_DIR=/usr/lib/qt3 ;
fi

echo QT_DIR = ${QT_DIR} >> Makefile.config

echo ----------------------------------------------
