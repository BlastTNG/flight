#!/bin/sh

echo ----------------------------------------------
echo "           Narsil configuration"
echo
echo -n "Executable destination [/usr/local/bin]: "
read EXEC_DEST

if [ -z ${EXEC_DIR} ]
then
  EXEC_DIR=/usr/local/bin ;
fi

echo EXEC_DIR = ${EXEC_DIR} > Makefile.config

echo -n "Data directory [/data/etc/narsil]: "
read DATA_DIR

if [ -z ${DATA_DIR} ]
then
  DATA_DIR=/data/etc/narsil ;
fi

echo DATA_DIR = ${DATA_DIR} >> Makefile.config

echo -n "qt root directory [/usr/lib/qt3]: "
read QT_DIR

if [ -z ${QT_DIR} ]
then
  QT_DIR=/usr/lib/qt3 ;
fi

echo QT_DIR = ${QT_DIR} >> Makefile.config

if test [$HOSTNAME == 'galadriel']
then
  echo -n "blastcmd command name [blastcmd]: "
  read BLAST_CMD

  if [ -z ${BLAST_CMD} ]
  then
    BLAST_CMD=blastcmd ;
  fi
  echo BLAST_CMD = ${BLAST_CMD} >> Makefile.config
  echo -n "cur file location [/data/etc]: "
  read CUR_DIR

  if [ -z ${CUR_DIR} ]
  then
    CUR_DIR=/data/etc ;
  fi

  echo CUR_DIR = ${CUR_DIR} >> Makefile.config
else
  echo -n "blastcmd command name [blastcmdatgaladriel]: "
  read BLAST_CMD

  if [ -z ${BLAST_CMD} ]
  then
    BLAST_CMD=blastcmdatgaladriel ;
  fi
  echo BLAST_CMD = ${BLAST_CMD} >> Makefile.config
  echo -n "cur file location [/mnt/decom/etc]: "
  read CUR_DIR

  if [ -z ${CUR_DIR} ]
  then
    CUR_DIR=/mnt/decom/etc ;
  fi

  echo CUR_DIR = ${CUR_DIR} >> Makefile.config
fi

echo ----------------------------------------------
