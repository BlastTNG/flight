#!/bin/sh

[ -x "Makefile.config" ] || rm -rf Makefile.config;

if [[ `hostname` = "nogrod" || `hostname` = "itsy" ]]
then
  echo "HAVE_ACS = -DHAVE_ACS" > Makefile.config ;
  echo "USE_FIFO_CMD = -DUSE_FIFO_CMD" >> Makefile.config;
  echo "Configuring mcp to utilize ACS devices" ;
elif [[ `hostname` = "somewhere_at_caltech" ]]
then
  echo "HAVE_CRYO = -DHAVE_CRYO" > Makefile.config ;
  echo "USE_FIFO_CMD = -DUSE_FIFO_CMD" >> Makefile.config;
  echo "Configuring mcp to utilize cryostat related devices" ;
else
  echo "USE_FIFO_CMD = -DUSE_FIFO_CMD" > Makefile.config;
  echo "Configuring barebones (BLAST bus only) mcp" ;
fi;
echo "ETC_DIR = /data/etc" >> Makefile.config ;
