#!/bin/sh

echo ----------------------------------------------
echo "           Blastcmd configuration"
echo
echo -n "Executable destination [/usr/local/bin]: "
read EXEC_DEST

if [ -z ${EXEC_DIR} ]
then
  EXEC_DIR=/usr/local/bin ;
fi

echo EXEC_DIR = ${EXEC_DIR} > Makefile.config

echo -n "Data directory [/data/etc/blastcmd]: "
read DATA_DIR

if [ -z ${DATA_DIR} ]
then
  DATA_DIR=/data/etc/blastcmd ;
fi

echo DATA_DIR = ${DATA_DIR} >> Makefile.config

echo ----------------------------------------------
